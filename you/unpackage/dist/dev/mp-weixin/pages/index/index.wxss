.indexContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 60rpx;
  padding: 10rpx 0;
}
.indexContainer .header image {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx 30rpx;
}
.indexContainer .header .searchInput {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #eee;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.indexContainer .header .searchInput text {
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 20rpx;
}
.indexContainer .header .searchInput input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.indexContainer .header .searchInput .placehodler {
  font-size: 24rpx;
  color: #666;
}
.indexContainer .header button {
  width: 144rpx;
  height: 60rpx;
  padding: 0 4rpx;
  color: #b4282d;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
  margin: 0 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.indexContainer .navContainer {
  margin: 0 20rpx;
}
.indexContainer .navContainer .scrollContainer {
  width: 100%;
  height: 80rpx;
}
.indexContainer .navContainer .scrollContainer .scollContent {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 80rpx;
}
.indexContainer .navContainer .scrollContainer .scollContent view {
  display: inline-block;
  white-space: nowrap;
  margin-right: 20rpx;
  height: 100%;
  line-height: 80rpx;
  box-sizing: border-box;
}
.indexContainer .navContainer .scrollContainer .scollContent view.active {
  border-bottom: 1rpx solid red;
}

